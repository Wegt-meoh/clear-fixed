{
    "name": "clear fixed element",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "description": "An extension to remove the elements whose css property is position:fixed.",
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "background": {
        "service_worker": "bg.js",
        "type": "module"
    },
    "action": {
        "bg": "bg.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}